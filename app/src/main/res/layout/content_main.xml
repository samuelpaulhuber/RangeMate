<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:background="@drawable/brass">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:paddingTop="50dp"
        android:text="Welcome to RangeMate!"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingTop="40dp"
        android:layout_gravity="bottom|center"
        android:text="Choose a task from below"
        android:textColor="@color/colorWhite"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/stages_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stages"/>
        <Button
            android:id="@+id/hitFactor_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hit Factor"
            android:onClick="startHitFactor"/>
            <Button
                android:id="@+id/classifiers_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Classifiers"/>
        </LinearLayout>


</LinearLayout>
